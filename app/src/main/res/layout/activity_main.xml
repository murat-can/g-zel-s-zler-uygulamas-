<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agac"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/basla"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="76dp"

        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:background="@drawable/button_radius_verme"
        android:text="@string/ba_la"
        android:textColor="#140101"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paylas"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_radius_verme"
        android:text="@string/uygulamay_payla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basla" />

    <Button
        android:id="@+id/hakkinda"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_radius_verme"
        android:text="@string/uygulama_hakk_nda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paylas" />

    <Button
        android:id="@+id/destek"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_radius_verme"
        android:text="@string/buraya_t_klayarak_reklam_izleyerek_bize_destek_olabilirsiniz"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hakkinda" />

</androidx.constraintlayout.widget.ConstraintLayout>